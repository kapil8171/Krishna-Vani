<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    tools:context=".view.fragments.SettingsFragment">

 
     <LinearLayout
          android:id="@+id/llTop"
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
          android:orientation="vertical"
         android:gravity="center"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintTop_toTopOf="parent"
          app:layout_constraintEnd_toEndOf="parent"
          >

          <LinearLayout
              android:id="@+id/llBhagwatGita"
              android:layout_width="wrap_content"
              android:layout_height="65.00dp"
              android:gravity="center"
              android:padding="13.00dp"
              app:layout_constraintEnd_toEndOf="parent"
              app:layout_constraintStart_toStartOf="parent"
              app:layout_constraintTop_toTopOf="parent">



               <ImageView
                   android:layout_width="19.50dp"
                   android:layout_height="19.50dp"
                   android:src="@drawable/kalash"/>

               <TextView
                   android:id="@+id/tvChapterNumber"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_marginHorizontal="2.60dp"
                   android:text="Shree Bhagavat Gita"
                   android:textColor="#FFA500"
                   android:textSize="26.00sp"
                   android:textStyle="bold"/>

               <ImageView
                   android:layout_width="19.50dp"
                   android:layout_height="19.50dp"
                   android:src="@drawable/kalash"/>
          </LinearLayout>

     <androidx.cardview.widget.CardView
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
          android:elevation="2.60dp"
          app:cardUseCompatPadding="true"
          android:clickable="true"
          android:layout_marginTop="65.00dp"
          android:layout_marginHorizontal="26.00dp"
          android:focusable="true"
          app:cardCornerRadius="6.50dp"
          >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                 android:orientation="vertical"
                 android:clickable="true"
                 android:focusable="true"
                 android:id="@+id/savedVerses"
                 android:background="@drawable/bg_iv_chapters"
                 android:padding="6.50dp"
                 >

                 <LinearLayout
                      android:id="@+id/llSavedChapters"
                     android:layout_width="match_parent"
                     android:layout_height="wrap_content"
                     android:layout_marginTop="@dimen/_10sdp"
                     android:layout_marginBottom="@dimen/_10sdp"
                      android:orientation="horizontal"
                      >

                      <ImageView
                          android:layout_width="32.50dp"
                          android:layout_height="32.50dp"
                           android:src="@drawable/img_1"
                           android:layout_weight="0.1"
                           />
                      <TextView
                           android:id="@+id/tvSavedChapters"
                          android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                           android:layout_marginHorizontal="2.60dp"
                           android:text="Saved Chapters"
                           android:layout_weight="0.8"
                           android:textColor="@color/orange"
                           android:textSize="18.20sp"
                           android:layout_gravity="center_vertical"
                           android:textStyle="bold" />
                      <ImageView
                          android:layout_width="32.50dp"
                          android:layout_height="32.50dp"
                           android:layout_weight="0.1"
                           android:src="@drawable/baseline_double_arrow_24"
                          app:tint="@color/orange" />
                      
                 </LinearLayout>



                 <LinearLayout
                      android:id="@+id/llSavedVerses"
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:orientation="horizontal"
                      android:layout_marginTop="@dimen/_10sdp"
                      android:layout_marginVertical="9.10dp"
                      >

                      <ImageView
                          android:layout_width="32.50dp"
                          android:layout_height="32.50dp"
                          android:src="@drawable/img_1"
                          android:layout_weight="0.1"
                          />
                      <TextView
                          android:id="@+id/tvSavedVerses"
                          android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:layout_marginHorizontal="2.60dp"
                          android:text="Saved Verses"
                          android:layout_weight="0.8"
                          android:textColor="@color/orange"
                          android:textSize="18.20sp"
                          android:layout_gravity="center_vertical"
                          android:textStyle="bold" />
                      <ImageView
                          android:layout_width="32.50dp"
                          android:layout_height="32.50dp"
                          android:layout_weight="0.1"
                          android:src="@drawable/baseline_double_arrow_24"
                          app:tint="@color/orange" />








                 </LinearLayout>

            </LinearLayout>

     </androidx.cardview.widget.CardView>

     </LinearLayout>




     <ImageView
         android:id="@+id/backgroundImage"
         android:layout_width="@dimen/_150sdp"
         android:layout_height="@dimen/_100sdp"
         android:scaleType="centerInside"
         android:alpha="0.2"
         android:src="@drawable/img_4"
         app:layout_constraintStart_toStartOf="parent"
         app:layout_constraintTop_toBottomOf="@id/llTop"
         android:background="@android:color/transparent" />


     <ImageView
          android:id="@+id/backgroundImage1"
          android:layout_width="@dimen/_200sdp"
          android:layout_height="@dimen/_200sdp"
          android:src="@drawable/img"
          android:scaleType="centerInside"
            app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintEnd_toEndOf="parent"
          app:layout_constraintTop_toTopOf="parent"
          app:layout_constraintBottom_toBottomOf="parent"
          android:layout_marginTop="@dimen/_180sdp"
          android:alpha="0.2" />

     <ImageView
         android:layout_width="@dimen/_150sdp"
         android:layout_height="@dimen/_100sdp"
         android:alpha="0.2"
         android:rotationX="180"
         android:scaleType="centerInside"
         android:src="@drawable/img_4"
         app:layout_constraintBottom_toBottomOf="parent"
         app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>